                    <div class="row">
                        <div class="col-sm-4 ">
                            <div class="col-sm-12 col-sm-4 "  >
                                <%= image_tag @hanghoasid.anh, style: "width: 100%;margin: 20px;border: 1px solid #DCC" %>
                            </div>
                        </div>
                        <div class="col-sm-4">
