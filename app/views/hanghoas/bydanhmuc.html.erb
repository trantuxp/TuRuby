<html>
  <head>
  </head>
  <body style="background: #f5f5f5">
   
    <div class="container-fluid">
      <div class="container">
        <div class="row">
          <div class="col-12" style="background: #fff;height:60px; padding-top: 20px">
            <smal>Trang chủ >> cây cảnh >> <%= @danhmucsid.tendanhmuc %> </smal>
          </div>
          <div class="col-3">
            <div class="list-group">
              <a href="#" class="list-group-item list-group-item-action bg-success active">
                Cây cảnh
              </a>
              <% @danhmucs.each do |danhmucs| %>
              <a href="#" class="list-group-item list-group-item-action"><%= danhmucs.tendanhmuc %></a>
              <% end %>
            </div>
          </div>
          <div class="col-9">
            <h3 style="color: green"><b><%= @danhmucsid.tendanhmuc %> </b></h3>
            <hr style="border: 1px solid green">
            <h4 > <%= @danhmucsid.mota %></h4> <!--Mô tả-->
            <div class="row">
              <% @hanghoasbydanhmuc.each do |hanghoa| %>
                <div class="col-sm-4 text-center " style="background: #FFF;border: 10px solid #f5f5f5"> 
                  <%= image_tag hanghoa.anh,style: "width: 100%;height:300px; display: block;padding: 10px;margin-top: 10px" %>
                  <p style="font-size: 18px"><b><%= hanghoa.tensp %></b></p>
                  <p style="font-size: 18px;float: left"><i><%= hanghoa.dongia %></i></p>
                  <p style="float: right"><input class="btn btn-sm btn-danger "type="button" value="Mua"></p>
                  <br>
                  <p><%= link_to 'Read more', hanghoa_path(hanghoa)%></p>
                </div>
              <% end %>
            </div>
          </div>
      
        </div>
      </div>
    </div>
  </body>
</html>

